{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["MONGO_URI", "MAIL_USER", "RESEND_API_KEY", "EMAIL_PROVIDER"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {}
  }
}
